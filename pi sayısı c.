#include <stdio.h>
#include <math.h> //M_PI sayisini kullanmak için

   int main(){
       
       float yaricap, cap, cevre, alan;
       
       printf("cember yaricapini giriniz:");
       scanf("%f", &yaricap);
       
       cap = 2 * yaricap;
       cevre = 2 * M_PI * yaricap;
       alan = M_PI * (yaricap * yaricap);
       
       printf("cemberin capı = %.2f birimdir \n", cap);
       printf("cemberin cevresi = %.2f birimdir \n", cevre);
       printf("dairenin alanı = %.2f", alan);
       
       return 0;
   }
